@model Order

<h3>Оформление заказа</h3>
<div class="row" mb-5>
    <form asp-action="Checkout" method="post" class="form-horizontal">
        <div class="form-group" style="width: auto">
            <label asp-for="name"></label>
            <div class="col-md-5">
                <input asp-for="name" class="form-control" style="width: auto" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group" style="width: auto">
            <label asp-for="lastName"></label>
            <div class="col-md-5">
                <input asp-for="lastName" class="form-control" style="width: auto" />
                <span asp-validation-for="lastName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group" style="width: auto">
            <label asp-for="phone"></label>
            <div class="col-md-5">
                <input asp-for="phone" class="form-control"  style="width: auto"/>
                <span asp-validation-for="phone" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group" style="width: auto">
            <label asp-for="email"></label>
            <div class="col-md-5">
                <input asp-for="email" class="form-control" style="width: auto" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
        </div>
        <input class="btn-success" type="submit" value="Завершить заказ" />
    </form>
</div>