@model LoginModel

<h3>Login page</h3>
<div class="row" mb-5>
    <form asp-action="Login" method="post" class="form-horizontal">
        <div class="form-group" style="width: auto">
            <label asp-for="email"></label>
            <div class="col-md-5">
                <input asp-for="email" class="form-control" style="width: auto" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group" style="width: auto">
            <label asp-for="password"></label>
            <div class="col-md-5">
                <input asp-for="password" class="form-control" style="width: auto" />
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
        </div>
        <input class="btn-success" type="submit" value="Login" />
    </form>
</div>