@model ShopCartViewModel

<div calss="container">
    @foreach (var item in Model.shopCart.listShopItems)
    {
    <div class="alert alert-warning mt-3">
        <b>Автомобиль: </b> @item.car.name
        <br />
        <b>Цена:</b> @item.car.price.ToString("c")
    </div>
    }
    <hr />
    <a class="btn btn-danger" asp-controller="Order" asp-action="Checkout">Оплатить</a>
</div>